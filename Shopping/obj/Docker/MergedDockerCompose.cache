services:
  shopping.api:
    build:
      context: .
      dockerfile: Shopping.API/Dockerfile
    container_name: shoppingapi
    depends_on:
      shopping.db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseSettings:ConnectionString: mongodb://shoppingdb:27017
    image: shoppingapi
    ports:
    - mode: ingress
      target: 80
      published: 8000
      protocol: tcp
  shopping.client:
    build:
      context: .
      dockerfile: Shopping.Client/Dockerfile
    depends_on:
      shopping.api:
        condition: service_started
      shopping.db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ShoppingAPIUrl: http://shoppingapi
    image: shoppingclient
    ports:
    - mode: ingress
      target: 80
      published: 8001
      protocol: tcp
  shopping.db:
    container_name: shoppingdb
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: mongo
    ports:
    - mode: ingress
      target: 27017
      published: 27017
      protocol: tcp
    restart: always
    volumes:
    - type: bind
      source: /site
      target: /data/db
      bind:
        create_host_path: true